<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    android:background="@drawable/estilo_on_boarding"
    tools:context=".onBoarding.OnBoard2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSlide2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img2_onboarding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSl2Tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:text="@string/tv_slide2_tit"
            android:textColor="@color/colorGrisClaro"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSlide2" />

        <TextView
            android:id="@+id/tvSl2Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/robotolight"
            android:gravity="center"
            android:text="@string/tv_slide1_desc"
            android:textColor="@color/colorGrisClaro"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSl2Tit" />


        <ImageView
            android:id="@+id/ivFlechaDerecha"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_derecha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/ivFlechaIzquierda"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_izquierda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <ImageView
            android:id="@+id/tvSl2Dot"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/dot_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSl2Desc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>