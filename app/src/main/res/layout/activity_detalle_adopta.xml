<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPurpuraClaro2"
    tools:context=".alertas_adoptar.DetalleAdoptaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto_d"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@color/colorBlanco"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fotos_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:orientation="horizontal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/h_tipo_animal"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"/>

            <TextView
                android:id="@+id/tipoAnimal_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotomedium" />

            <ImageView
                android:id="@+id/sexo_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_macho"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"
                android:text="@string/h_color"/>

            <TextView
                android:id="@+id/color_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotomedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/e_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"
                android:text="@string/h_edad"/>
            <TextView
                android:id="@+id/edad_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotomedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/r_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"
                android:text="@string/h_raza"/>

            <TextView
                android:id="@+id/raza_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotomedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/d_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"
                android:text="@string/h_desc"/>



                <TextView
                    android:id="@+id/desc_adopta_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBack"
                    android:fontFamily="@font/robotomedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotolight"
                android:text="@string/n_raza"/>

            <TextView
                android:id="@+id/nik_adopta_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBack"
                android:fontFamily="@font/robotomedium" />
        </LinearLayout>

        <Button
            android:id="@+id/btAbrChat_mark"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/estilo_titulo_mascotas"
            android:drawableEnd="@drawable/ic_correo_blanco"
            android:paddingEnd="20dp"
            android:paddingStart="30dp"
            android:text="@string/btn_contacto"
            android:textAllCaps="false"
            android:textColor="@color/colorBlanco"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:onClick="abrirChat"/>
    </LinearLayout>

 </androidx.constraintlayout.widget.ConstraintLayout>