<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpura"
    tools:context=".alertas_adoptar.DetalleAdoptaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/foto_d"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@color/colorBlanco"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_fotos_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp"
                    android:orientation="horizontal"
                    />
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h_tipo_animal"
            android:textSize="20sp"
            android:textColor="@color/colorMagenta"/>
        <TextView
            android:id="@+id/tipoAnimal_adopta_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorGrisClaro"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/sexo_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_macho"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/c_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorMagenta"
            android:text="@string/h_color"/>
        <TextView
            android:id="@+id/color_adopta_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorGrisClaro"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/e_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorMagenta"
            android:text="@string/h_edad"/>
        <TextView
            android:id="@+id/edad_adopta_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorGrisClaro"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/r_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorMagenta"
            android:text="@string/h_raza"/>

        <TextView
            android:id="@+id/raza_adopta_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorGrisClaro"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/d_adopta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorMagenta"
            android:text="@string/h_desc"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/desc_adopta_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorGrisClaro"
                    android:layout_weight="1"/>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tx_bt_abrir_chat"
            android:onClick="abrirChat"
            />
    </LinearLayout>
 </RelativeLayout>