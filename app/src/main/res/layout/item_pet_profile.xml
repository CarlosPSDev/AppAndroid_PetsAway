<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/llItemPet"
        android:orientation="horizontal"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvRcNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Nombre Mascota"
                android:textColor="@color/colorBack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRcValEspecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:textColor="@color/colorBack"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvRcValColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:textColor="@color/colorBack"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvRcValFechaNac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotolight"
                    android:textColor="@color/colorBack"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ivSexoMascota"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="2dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/roundCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/ivRcPet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_perro_pet" /><!--android:src="@drawable/usuario"-->
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:id="@+id/lineaSeparadora"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="@color/colorGris"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llItemPet"
        android:layout_marginTop="16dp" />

</RelativeLayout>