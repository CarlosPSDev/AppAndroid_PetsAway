<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="4px"
        android:left="4px"
        android:right="4px"
        android:top="4px">

        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlanco"/>
            <corners android:radius="30dp"/>
            <padding
                android:top="15dp"
                android:left="15dp"
                android:right="15dp"
                android:bottom="15dp"/>
            <stroke android:color="@color/colorMagenta"
                android:width="1dp"/>
        </shape>

    </item>

</layer-list>